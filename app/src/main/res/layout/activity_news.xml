<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cacaca">
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/listitemcorner">
        <!-- Title Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/ActionBarButtonBorder">
                <TextView
                    android:id="@+id/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:textColor="@color/white"
                    android:textSize="28dp"
                    android:layout_marginLeft="12dp"
                    />
            </FrameLayout>
            <RelativeLayout
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </RelativeLayout>
        </LinearLayout>
        <!-- Main Fragment Frame -->
        <FrameLayout
            android:id="@+id/view_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
            <!-- Load screen -->
            <RelativeLayout
                android:id="@+id/load_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:id="@+id/load_screen_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/ActionBarButtonBorder"
                    />
                <RelativeLayout
                    android:id="@+id/load_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <View
                        android:layout_width="512px"
                        android:layout_height="512px"
                        android:background="@drawable/icon_background"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        />
                    <View
                        android:id="@+id/load_icon_back_text"
                        android:layout_width="512px"
                        android:layout_height="512px"
                        android:background="@drawable/icon_back_text"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        />
                    <View
                        android:id="@+id/load_icon_front_img"
                        android:layout_width="512px"
                        android:layout_height="512px"
                        android:background="@drawable/icon"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>
        <!-- Action Bar -->
        <FrameLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="45dp"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/newsButton"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/centerbuttonshape"
                    />
                <Button
                    android:id="@+id/categoryButton"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/centerbuttonshape" />
                <Button
                    android:id="@+id/searchButton"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/centerbuttonshape"
                    />
                <Button
                    android:id="@+id/forumButton"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/centerbuttonshape"
                    />
                <Button
                    android:id="@+id/profileButton"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/centerbuttonshape"
                    />
            </LinearLayout>
            <!-- Icons -->
            <LinearLayout
                android:id="@+id/buttons_icon"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="45dp"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/home_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/home"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/category_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/category"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/search_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/search"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/forum_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/home"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/profile_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/user"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</FrameLayout>