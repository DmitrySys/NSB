<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listitembackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/news_page_backButton"
                android:layout_width="48dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/news_page_Title"
                android:textSize="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="@drawable/actionbar"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/news_page_preIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/news_page_ImageSwitcher"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:scaleType = "centerCrop" />
        <TextView
            android:id="@+id/news_page_Intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            />
    </LinearLayout>
</ScrollView>